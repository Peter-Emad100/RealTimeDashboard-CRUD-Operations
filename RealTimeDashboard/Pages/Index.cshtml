@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="container">
    <div class="row p-1">
        <div class="col-1">Name</div>
        <div class="col-5"><input type="text" id="nameInput" placeholder="Name" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Price</div>
        <div class="col-5"><input type="number" class="w-100" id="priceInput" placeholder="Price" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Quantity</div>
        <div class="col-5"><input type="number" class="w-100" id="quantityInput" placeholder="Quantity" /></div>
    </div>
    <div id="errorMessage" style="color:red;"></div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="button" id="sendButton" value="Insert Item" />
            <input type="button" id="clearButton" value="Clear All" class="danger" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="itemsList"></ul>
        </div>
    </div>
</div>
<script src="~/js/signalr/signalr.js"></script>
<script src="~/js/Dashboard.js"></script>
